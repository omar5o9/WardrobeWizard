<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Navigation Menu -->
    <LinearLayout
        android:id="@+id/navigationMenu"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="127dp"
        android:orientation="horizontal">

        <!-- Back button -->

        <!-- Logo or app name -->

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal">

            <Button
                android:id="@+id/plannerButton"
                style="@style/Widget.MaterialComponents.TimePicker.Button"
                android:layout_width="132dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Planner"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/outfitsButton"
                style="@style/Widget.MaterialComponents.TimePicker.Button"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:text="Outfits"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/calendarButton"
                style="@style/Widget.MaterialComponents.TimePicker.Button"
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Calendar"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:layout_below="@id/navigationMenu"
        android:layout_marginTop="-1dp">

        <!-- Planner content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Monday -->
            <LinearLayout
                android:id="@+id/mondayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:textSize="16sp" />

                <!-- Dropdown menu for names -->
                <Spinner
                    android:id="@+id/mondayDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Add notes section -->
                <EditText
                    android:id="@+id/mondayNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add notes" />

            </LinearLayout>

            <!-- Tuesday -->
            <!-- Add layout for Tuesday similar to Monday -->
            <LinearLayout
                android:id="@+id/tuesdayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuesday" />

                <!-- Dropdown menu for names -->
                <Spinner
                    android:id="@+id/tuesdayDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Add notes section -->
                <EditText
                    android:id="@+id/tuesdayNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add notes" />

            </LinearLayout>

            <!-- Wednesday -->
            <!-- Add layout for Wednesday similar to Monday -->
            <LinearLayout
                android:id="@+id/wednesdayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wednesday" />

                <!-- Dropdown menu for names -->
                <Spinner
                    android:id="@+id/wednesdayDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Add notes section -->
                <EditText
                    android:id="@+id/wednesdayNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add notes" />

            </LinearLayout>

            <!-- Thursday -->
            <!-- Add layout for Thursday similar to Monday -->
            <LinearLayout
                android:id="@+id/thursdayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thursday" />

                <!-- Dropdown menu for names -->
                <Spinner
                    android:id="@+id/thursdayDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Add notes section -->
                <EditText
                    android:id="@+id/thursdayNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add notes" />

            </LinearLayout>

            <!-- Friday -->
            <!-- Add layout for Friday similar to Monday -->
            <LinearLayout
                android:id="@+id/fridayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friday" />

                <!-- Dropdown menu for names -->
                <Spinner
                    android:id="@+id/fridayDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Add notes section -->
                <EditText
                    android:id="@+id/fridayNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add notes" />

            </LinearLayout>

            <!-- Saturday -->
            <!-- Add layout for Saturday similar to Monday -->
            <LinearLayout
                android:id="@+id/saturdayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saturday" />

                <!-- Dropdown menu for names -->
                <Spinner
                    android:id="@+id/saturdayDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Add notes section -->
                <EditText
                    android:id="@+id/saturdayNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add notes" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/sundayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday" />

                <!-- Dropdown menu for names -->
                <Spinner
                    android:id="@+id/sundayDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/sundayNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add notes"
                    android:padding="16dp" />

            </LinearLayout>

            <Button
                android:id="@+id/saveButton"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="160dp"
                android:layout_height="61dp"
                android:background="@color/black"
                android:backgroundTint="@color/black"
                android:text="Save"
                android:textColor="@color/white"
                app:iconTint="@color/black"
                app:rippleColor="@color/black" />

            <Button
                android:id="@+id/saveButton2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="160dp"
                android:layout_height="66dp"
                android:background="@color/black"
                android:backgroundTint="@color/black"
                android:text="New Week"
                android:textColor="@color/white"
                app:iconTint="@color/black"
                app:rippleColor="@color/black" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/logoTextView"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:padding="16dp"
        android:text="                                                                                                      Wardrobe Wizard"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:src="@drawable/baseline_arrow_back_24" />

</RelativeLayout>
