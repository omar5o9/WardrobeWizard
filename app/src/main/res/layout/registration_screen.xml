<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <EditText
        android:id="@+id/FirstName"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#80FDFAFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Email"
        app:layout_constraintEnd_toStartOf="@+id/LastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <EditText
        android:id="@+id/LastName"
        android:layout_width="122dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="70dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#80FDFAFA"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/email_Enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FirstName"
        app:layout_constraintTop_toBottomOf="@+id/Register"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Register"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="151dp"
        android:layout_height="51dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="121dp"
        android:selectAllOnFocus="false"
        android:text="Register"
        android:textColor="#8CFEFFFF"
        android:textColorHighlight="#03A9F4"
        android:textColorHint="#981616"
        android:textIsSelectable="false"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeaderIMG" />

    <ImageView
        android:id="@+id/HeaderIMG"
        android:layout_width="391dp"
        android:layout_height="191dp"
        android:layout_marginBottom="75dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/LastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142"
        app:srcCompat="@drawable/r" />

    <EditText
        android:id="@+id/email_Enter"
        android:layout_width="330dp"
        android:layout_height="44dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#80F8F5F5"
        app:layout_constraintBottom_toTopOf="@+id/Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="4dp"
        android:text="Email"
        android:textAlignment="textEnd"
        android:textColor="#80FDFDFD"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/email_Enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstName"
        tools:text="Email" />

    <EditText
        android:id="@+id/password_Enter"
        android:layout_width="333dp"
        android:layout_height="42dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#80FAF9F9"
        app:layout_constraintBottom_toTopOf="@+id/ConfirmPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_Enter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/confirm_password_enter"
        app:layout_constraintTop_toBottomOf="@+id/Password"
        app:layout_constraintVertical_bias="0.232" />

    <TextView
        android:id="@+id/Password"
        android:layout_width="118dp"
        android:layout_height="37dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="4dp"
        android:text="Password"
        android:textColor="#80FAF7F7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/password_Enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_Enter"
        tools:text="Password" />

    <EditText
        android:id="@+id/confirm_password_enter"
        android:layout_width="341dp"
        android:layout_height="36dp"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorLink="#0B0000"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmPassword" />

    <TextView
        android:id="@+id/ConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="4dp"
        android:text="Confirm Password"
        android:textColor="#80FDFAFA"
        android:textColorHighlight="#0C0101"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_password_enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_Enter"
        tools:text="Confirm Password" />

    <Button
        android:id="@+id/button"
        android:layout_width="181dp"
        android:layout_height="59dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#3E11BD"
        android:text="Create Account"
        android:textColor="#100000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_enter"
        tools:text="Create Account" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="4dp"
        android:text="First Name"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/FirstName"
        app:layout_constraintEnd_toStartOf="@+id/textView32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HeaderIMG" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="3dp"
        android:text="Last Name"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/LastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Register"
        app:layout_constraintTop_toBottomOf="@+id/Register" />

</androidx.constraintlayout.widget.ConstraintLayout>